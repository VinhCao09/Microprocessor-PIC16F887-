#include<16f887.h>
#fuses hs
#use delay(clock=20M)
#define     lcd_e       pin_c7
#define     lcd_rw      pin_c6
#define     lcd_rs      pin_c5
#define     output_lcd  output_d
#include<TV_LCD.c>
int32 i,LED,a,j,LED1;
signed int8 che_do=0, T0,GHD=0;


void hien_thi_lcd()
{
lcd_command(0x80+6);
lcd_data("21161386");
lcd_command(0xc0);
printf(lcd_data,"HIEU UNG SO:");
lcd_command(0xD4);
lcd_data("HOC VXL THAT DE!!!");
lcd_command(0x94);

}

//xu ly nut up down
void MODE_BUTTON()
{
   if(input(pin_e2)==0) //phim up
   {
      delay_ms(20);
      if(input(pin_e2)==0)
      {
      che_do++;
      while(input(pin_e2)==0);
      if (che_do==4) che_do=0;
      }
   }
}
void XULY_NUTNHAN()
{
   if(input(pin_e0)==0) //phim up
   {
      delay_ms(20);
      if(input(pin_e0)==0)
      {
      GHD++;
      while(input(pin_e0)==0);
      if (GHD==100) GHD=0;
      }
   }
   else if(input(pin_e1)==0) //phim down
   {
      delay_ms(20);
      if(input(pin_e1)==0)
      {
      GHD--;
      while(input(pin_e0)==0);
      if (GHD==-1) GHD=99;
      }
   }
}

   



void main()
{
set_tris_a(0x10); //input A4
set_tris_c(0);
set_tris_d(0);
set_tris_e(1);

setup_timer_0(T0_EXT_H_TO_L|T0_DIV_1);//Chon canh tich cuc va bo chia truoc
set_timer0(0); //dat truoc so dem
lcd_setup();

   while(true)
   {
   if(T0>=GHD) set_timer0(1); // khong che GHD
   T0= get_timer0(); // Ðoc ket qua dem ve
   
   lcd_command(0x94);
   printf(lcd_data,"LIMIT: %d ",GHD);
   lcd_command(0x94+10);
   printf(lcd_data,"COUNTER: %d ",T0);
   }
   
}
